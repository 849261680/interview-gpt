# Interview-GPT 环境变量配置

# 基础设置
DEBUG=true
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS设置
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://interview-gpt.vercel.app

# 数据库设置
DATABASE_URL=sqlite:///./interview_gpt.db

# AI服务设置
# DEEPSEEK API配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# MiniMax API配置（可选）
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_minimax_group_id_here

# OpenAI API配置（可选，作为备用）
OPENAI_API_KEY=your_openai_api_key_here

# Google Speech API配置（可选）
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-credentials.json
GOOGLE_SPEECH_PROJECT_ID=your_google_project_id_here
GOOGLE_SPEECH_CREDENTIALS_PATH=/path/to/your/google-credentials.json

# 知识库设置
VECTOR_DB_TYPE=chroma
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# CrewAI设置
CREWAI_VERBOSE=true
CREWAI_MAX_ITERATIONS=15
CREWAI_MAX_RPM=60

# 日志设置
LOG_LEVEL=INFO
LOG_FILE=logs/interview_gpt.log 